// prog to find the duplicate number
// (this logic is not suitable for large array, coz it exceeds time limit)
// i indirectly iterated 2 loops here (innovative method)
#include <iostream>
using namespace std;

void printArray(int arr[], int n) {
    for(int i=0; i<n; i++) {
        cout << arr[i] << " ";
    }cout << endl;
}

void findDuplicate(int arr[], int n) {
    int j=0;
    for(int i=j+1; i<n; i++) {
        if(j == (n-1)) {
            cout << "no duplicate found" << endl;
        }
        else if((arr[i] == arr[j]) && (i != j)) {
            cout << "found = " << arr[i] << endl;
        }
        else if(i == (n-1)) {
            j++;
            i = 1;
        }
    }
}

int main() {
    int n;
    cout << "enter size: ";
    cin >> n;
    int arr[n];
    cout << "enter elements: ";
    for(int i=0; i<n; i++) {
        cin >> arr[i];
    }
    printArray(arr,n);
    findDuplicate(arr,n);
    return 0;
}
